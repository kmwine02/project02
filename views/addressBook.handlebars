<head>
  <title>{{title}}</title>
  <link rel='stylesheet' href='/css/address.css' />
</head>

<nav class='navbar navbar-light bg-light'>
  <div class='container-fluid'>
    <div class='navbar-brand h1 header'>Address Book</div>
    <form class='d-flex'>
      <button type='button' class='btn btn-warning me-2'><a
          href='/newContact'
        >Add a new contact</a></button>
      <button
        class='btn btn-outline-warning'
        type='submit'
        id='logout'
      >Logout</button>
    </form>
  </div>
</nav>

<div class='container container-fluid mt-5'>
  <div class='row'>
    <div class='col'>
      {{#if Contacts.length}}
        <div class='row'>
          <div class='column contacts'>
            {{#each Contacts as |contact|}}
              <div class='row contact-info'>
                <div class='col align-text-middle'>
                  <h4>{{contact.firstName}} {{contact.lastName}}</h4>
                </div>
                <div class='col d-flex'>
                  <button type='button' class='btn btn-warning btn-edit me-2'><a
                      href='/contacts/{{contact.id}}'
                    >View Contact</a></button>
                  <button
                    type='button'
                    class='btn btn-primary btn-delete'
                    data-id='{{contact.id}}'
                  >Delete contact</button>
                </div>
              </div>
            {{/each}}
          </div>
        </div>
      {{/if}}
    </div>

  </div>
</div>

<script src='/js/addressbook.js'></script>
<script src='/js/logout.js'></script>